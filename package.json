{
  "name": "react-containerized-state",
  "version": "2.0.0",
  "description": "Fast and minimal state container which can be used and shared across React or non-React components.",
  "scripts": {
    "clear": "shx rm -rf dist",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prebuild": "pnpm run clear",
    "build:cjs": "tsc --project ./tsconfig.cjs.json",
    "build:esm": "tsc --project ./tsconfig.esm.json",
    "build": "run-p build:*",
    "lint:ts": "tsc --project tsconfig.json",
    "lint:ecma": "eslint --fix",
    "lint": "run-p lint:*"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.15.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "react",
    "state",
    "state management",
    "fast",
    "minimal",
    "containerized"
  ],
  "author": {
    "name": "Mostafa Shamsitabar",
    "email": "mostafa.sh.coderino@gmail.com"
  },
  "license": "MIT",
  "files": [
    "./dist",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "peerDependencies": {
    "containerized-state": ">=1",
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "dependencies": {
    "use-sync-external-store": "^1.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/node": "^20.17.19",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/use-sync-external-store": "^0.0.6",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.7",
    "@vitest/eslint-plugin": "1.1.32-beta.3",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "express": "^4.21.2",
    "jsdom": "^26.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shx": "^0.3.4",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7"
  }
}
